import java.util.Scanner;
public class Exercicio05 {
    public static void main(String[] args) {
        Scanner entrada = new Scanner(System.in);
        int TOTAL_ALUNOS = 6;
        int totalAprovados = 0;
        int totalExame = 0;
        int totalReprovados = 0;
        double soma = 0;
        System.out.println(" Notas de " + TOTAL_ALUNOS + " Alunos");
        for (int i = 1; i <= TOTAL_ALUNOS; i++) {
            System.out.println("\n Aluno " + i + " ");
            System.out.print("Digite a primeira nota1 : ");
            double nota1 = entrada.nextDouble();
            System.out.print("Digite a segunda nota2 : ");
            double nota2 = entrada.nextDouble();
            double media = (nota1 + nota2) / 2.0;
            soma += media;
            String situacao;
            if (media >= 7.0) {
                situacao = "Aprovado";
                totalAprovados++;
            } else if (media > 3.0 && media < 7.0) {
                situacao = "Exame";
                totalExame++;
            } else {
                situacao = "Reprovado";
                totalReprovados++;
            }
            System.out.printf("   Média do Aluno: %.2f\n", media);
            System.out.println("   Situação: " + situacao);
        }
        entrada.close();
        double mediaDaClasse = soma / TOTAL_ALUNOS;
        System.out.println("Total de alunos : " + TOTAL_ALUNOS);
        System.out.println(" Média da Classe: " + String.format("%.2f", mediaDaClasse));
        System.out.println(" Total de Aprovados (Média >= 7.0): " + totalAprovados);
        System.out.println(" Total de Exames (3.0 < Média < 7.0): " + totalExame);
        System.out.println(" Total de Reprovados (Média <= 3.0): " + totalReprovados);
    }
}
